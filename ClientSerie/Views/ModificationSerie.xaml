<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ClientSerie.Views.ModificationSerie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ClientSerie.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <RelativePanel>
        <TextBlock
            x:Name="tbNumeroSerie"
            Margin="0,50,0,0"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            Text="Numéro de série à afficher" />

        <TextBox
            x:Name="tboxNumeroSerie"
            Width="500"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="tbTitre"
            Text="{Binding NumeroSerie, Mode=TwoWay}" />

        <Button
            x:Name="BtRechercher"
            Width="200"
            Margin="0,10,0,10"
            Command="{Binding BtnRechercher}"
            Content="Rechercher"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxChaine" />


        <TextBlock
            x:Name="tbTitre"
            Margin="0,50,0,0"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            Text="Titre" />

        <TextBox
            x:Name="tboxTitre"
            Width="500"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="tbTitre"
            Text="{Binding SerieToAdd.Titre, Mode=TwoWay}" />

        <TextBlock
            x:Name="TblockResume"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="tboxTitre"
            Text="Resume" />

        <TextBox
            x:Name="TboxResume"
            Width="500"
            Height="200"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TblockResume"
            Text="{Binding SerieToAdd.Resume, Mode=TwoWay}" />

        <TextBlock
            x:Name="TblockNbSaisons"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxResume"
            Text="Nb Saisons" />


        <TextBox
            x:Name="TboxNbSaisons"
            Width="200"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TblockNbSaisons"
            Text="{Binding SerieToAdd.Nbsaisons, Mode=TwoWay}" />

        <TextBlock
            x:Name="TblockNbEpisodes"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxNbSaisons"
            Text="Nb Episodes" />


        <TextBox
            x:Name="TboxNbEpisodes"
            Width="200"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TblockNbEpisodes"
            Text="{Binding SerieToAdd.Nbepisodes, Mode=TwoWay}" />

        <TextBlock
            x:Name="TblockAnneeCreation"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxNbEpisodes"
            Text="Année création" />


        <TextBox
            x:Name="TboxAnneeCreation"
            Width="200"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TblockAnneeCreation"
            Text="{Binding SerieToAdd.Anneecreation, Mode=TwoWay}" />

        <TextBlock
            x:Name="TblockChaine"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxAnneeCreation"
            Text="Chaîne" />


        <TextBox
            x:Name="TboxChaine"
            Width="300"
            Margin="0,10,0,10"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TblockChaine"
            Text="{Binding SerieToAdd.Network, Mode=TwoWay}" />



        <Button
            x:Name="BtAjouter"
            Width="200"
            Margin="0,10,0,10"
            Command="{Binding BtnAjoutSerie}"
            Content="Ajouter"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.Below="TboxChaine" />


    </RelativePanel>
</Page>
